@model MvcKutuphane.Models.Entity.TBL_YAZARLAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
<div class="form-group">

    <div>
        <label>ID</label>
        @Html.TextBoxFor(k => k.ID, new { ReadOnly = "true", @class = "form-control" })
    </div>
    <br />
    <div>
        <label>AD</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>SOYAD</label>
        @Html.TextBoxFor(k => k.SOYAD, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>DETAY</label>
        @Html.TextAreaFor(k => k.DETAY, new {  @class = "form-control" })
    </div>
    <br />

    <button class="btn btn-secondary">Güncelle</button>

</div>

}
