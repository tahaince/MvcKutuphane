@using MvcKutuphane.Models.Entity;
@model List<TBL_KATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div style="margin-top:40px">
    <table class="table table-bordered">

        <tr style="color:white" class="bg-dark">

            <th>KATEGORİ ID</th>
            <th>KATEGORİ AD</th>
            <th>İŞLEMLER</th>

        </tr>

        @foreach (var ktg in Model)
        {


            <tr>
                <td>@ktg.ID</td>
                <td>@ktg.AD</td>
                <td>
                    <a class="btn btn-danger" href="/Kategori/KategoriSil/@ktg.ID">Sil</a>
                    <a class="btn btn-success" href="/Kategori/KategoriGetir/@ktg.ID">Güncelle</a>
                </td>


            </tr>
        }


    </table>

</div>
<br />

<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>
