@using MvcKutuphane.Models.Entity
@model List<TBL_KITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";



}



@using (Html.BeginForm("Index", "Kitap", FormMethod.Post))
{
    <div style="margin-top:15px;margin-bottom:15px;">
        <b>ARAMA</b>
        <br />
        @Html.TextBox("p")
        <button class="btn btn-warning">ARA</button>




    </div>

}


<table class="table table-bordered">


    <tr class="bg-dark" style="color:white">
        <td>ID</td>
        <td>KİTAP ADI</td>
        <td>KATEGORİSİ</td>
        <td>KİTAP YAZARI</td>
        <td>ÇIKIŞ YILI</td>
        <td>YAYINEVİ</td>
        <td>SAYFA SAYISI</td>
        <td>DURUM</td>
        <td>İŞLEMLER</td>

    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.TBL_KATEGORI.AD</td>
            <td> @x.TBL_YAZARLAR.AD&nbsp;@x.TBL_YAZARLAR.SOYAD</td>
            <td>@x.YIL</td>
            <td>@x.YAYINEVI</td>
            <td>@x.SAYFA</td>
            <td>@x.DURUM</td>
            <td>
                <a class="btn btn-danger" href="/Kitap/KitapSil/@x.ID">Sil</a>
                <a class="btn btn-success" href="/Kitap/KitapGetir/@x.ID">Güncelle</a>
            </td>

        </tr>

    }



</table>

<a href="/Kitap/KitapEkle/"><button class="btn btn-info">Ekle</button></a>

