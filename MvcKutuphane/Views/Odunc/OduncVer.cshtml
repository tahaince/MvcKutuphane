@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("OduncVer", "Odunc", FormMethod.Post))
{
    <form class="form-group">

        <div>


            <div>
                <label>Kitap AD</label>
                @Html.DropDownListFor(y => y.TBL_KITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
                @Html.ValidationMessageFor(y => y.KITAP, "", new { @style = "color:red" })

            </div>
            <br />

            <div>
                <label>Üye AD</label>
                @Html.DropDownListFor(k => k.TBL_UYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                @Html.ValidationMessageFor(y => y.UYE, "", new { @style = "color:red" })
            </div>
            <br />



            <div>
                <label>Personel AD</label>
               <input name="ID" value="@Session["ADSOYAD"].ToString()" class="form-control" readonly="true" />
                @Html.ValidationMessageFor(y => y.PERSONEL, "", new { @style = "color:red" })
            </div>
            <br />

            <div>
                <label>Kitap Teslim Tarihi</label>
                <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" readonly="true" />
            </div>
            <br />

            <div>
                <label>Kitap İade Trihi</label>
                <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" readonly="true" />
            </div>
            <br />


            <div>
               
                <input type="hidden"  name="ISLEMDURUM" value="False"  />
            </div>
            <div><button class="btn btn-success">Kitap Ödünç Ver</button> </div>

        </div>




    </form>
}


