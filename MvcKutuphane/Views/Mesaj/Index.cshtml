@using MvcKutuphane.Models.Entity
    @model List<TBL_MESAJLAR>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/OgrenciLayout.cshtml";
}
<h2>Gelen Mesajlar</h2>







<table class="table table-bordered">


    <tr class="bg-dark" style="color:white">
        <td>ID</td>
        <td>GÖNDEREN</td>
        <td>ALICI</td>
        <td>KONU</td>
        <td>İÇERİK</td>
        <td>TARİH</td>



    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.ID</td>
            <td>@x.GONDEREN</td>
            <td>@x.ALICI</td>
            <td>@x.KONU</td>
            <td>@x.ICERIK</td>
            <td>@x.TARIH</td>

        </tr>
    }




</table>





<div>
    <a href="/Mesaj/YeniMesaj/"><button class="btn btn-info">Ekle</button></a>
    <a href="/Mesaj/GidenMesaj/"><button class="btn btn-warning">Giden Mesaj</button></a>
</div>